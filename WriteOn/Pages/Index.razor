@page "/home"

@layout MainLayout

@using WriteOn.Models

<head>
    <link href="css/homepage.css" rel="stylesheet" />
</head>

<body>
    <div class="homepage-container">
        <div class="article-cards">
            @if (!Articles.Any())
            {
                <p>There are no articles yet. Be the first one to write one!</p>
            }
            else
            {
                @foreach (var article in Articles)
                {
                    <div class="article-card">
                        <h2>@article.Title</h2>
                        <div class="article-meta">
                            <span>By @article.AuthorName</span>
                            <span class="published-date">Published: @article.PublishDate.ToString("yyyy-MM-dd")</span>
                        </div>
                        <div class="article-content">
                            @article.Content
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>

@code {
    private List<Article> Articles { get; set; } = new List<Article>();
}